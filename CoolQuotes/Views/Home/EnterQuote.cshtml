@model QuoteList
<br />
<br />
<br />
<h1 class="text-center"> Enter Your Favorite Quote</h1>
<form asp-action="EnterQuote" method="post" style="padding-bottom:300px">
    <div class="form-group">
        <label asp-for="Quote"></label>
        <input asp-for="Quote" class="form-control"/>
    </div>

    <div class="form-group">
        <label asp-for="Speaker"></label>
        <input asp-for="Speaker" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Date"></label>
        <input asp-for="Date" class="form-control" id="my-input" autofocus="autofocus"/>
    </div>

    <div class="form-group">
        <label asp-for="Subject"></label>
        <input asp-for="Subject" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Citation"></label>
        <input asp-for="Citation" class="form-control" />
    </div>

    <button type="submit">Add Quote</button>

    <div asp-validation-summary="All"></div>
</form>

<script>if (!("autofocus" in document.createElement("input"))) {
    document.getElementById("my-input").focus();
  }</script>